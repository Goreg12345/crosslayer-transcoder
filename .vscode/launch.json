    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Training",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "args": [
                "fit",
                "--config",
                "config/default.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Debug Training",
            "type": "debugpy",
            "request": "launch",
            "program": "cli.py",
            "args": [
                "fit",
                "--config",
                "config/default.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "TRAIN",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "args": [
                "fit",
                "--config",
                "config/default.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            //"noDebug": true
        }
    ]
}